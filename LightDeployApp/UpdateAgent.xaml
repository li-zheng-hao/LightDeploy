<Window x:Class="LightDeployApp.UpdateAgent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LightDeployApp"
        mc:Ignorable="d"
        Title="UpdateAgent" Height="450" Width="800">
    <StackPanel>
        <Label>文件路径</Label>
        <Button Click="SelectDirClick">选择目标</Button>
        <TextBox Name="FilePath" IsReadOnly="True"></TextBox>
        <Button Click="PublishUpdate">发布</Button>
        <TextBox IsReadOnly="True" Height="300" Name="LogBox" Margin="5"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 TextChanged="LogBox_OnTextChanged"
        ></TextBox>
    </StackPanel>
</Window>
