<Window x:Class="LightDeployApp.Windows.InstallServiceParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LightDeployApp.Windows"
        mc:Ignorable="d"
        Title="InstallServiceParamsWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Label>服务名</Label>
        <TextBox Text="{Binding ServiceName}"></TextBox>
        
        <Label>服务完整路径(包括可执行文件)</Label>
        <TextBox Text="{Binding ServiceExe}"></TextBox>
        <Label>服务启动参数(多个参数用空格隔开)</Label>
        <TextBox Text="{Binding ServiceParams}"></TextBox>
        <Label>服务描述</Label>
        <TextBox Text="{Binding ServiceDescription}"></TextBox>
        <Button Click="ButtonBase_OnClick">确定</Button>
    </StackPanel>
</Window>
