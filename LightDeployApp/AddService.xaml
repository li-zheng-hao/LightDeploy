<Window x:Class="LightDeployApp.AddService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LightDeployApp"
        mc:Ignorable="d"
        Title="AddService" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Width="70">服务名称</Label>
            <TextBox Name="Service" Width="200"></TextBox>
        </StackPanel> 
        
        <Button Click="ButtonBase_OnClick">新增</Button>
        <Button Click="ButtonBase_OnClick2">删除</Button>
    </StackPanel>
</Window>
